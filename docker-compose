version: "3.9"

services:

  nginx:
    build:
      context: .
      dockerfile: dockerfile-nginx
    image: TharunReddy070/phonebook-nginx:latest
    depends_on:
      - flask-app
    ports:
      - "80:80"
    volumes:
      - ./source_code/static:/app/static:ro
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
    restart: always

  flask-app:
    build:
      context: .
      dockerfile: dockerfile-flask
    image: TharunReddy070/phonebook-flask:latest
    container_name: flask-app
    depends_on:
      - phonebook-mysql
    environment:
      DB_HOST: phonebook-mysql
      DB_USER: dev
      DB_PASSWORD: dev
      DB_NAME: crud_flask
      SECRET_KEY: "${SECRET_KEY:-mys3cr3tk3y}"
    expose:
      - "8181"
    restart: always

  phonebook-mysql:
    build:
      context: .
      dockerfile: dockerfile-mysql
    image: TharunReddy070/phonebook-mysql:5.7
    container_name: phonebook-mysql
    environment:
      MYSQL_ROOT_PASSWORD: root123
      MYSQL_DATABASE: crud_flask
      MYSQL_USER: dev
      MYSQL_PASSWORD: dev
    volumes:
      - mysql_data:/var/lib/mysql
    restart: always
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
      interval: 10s
      timeout: 5s
      retries: 5

volumes:
  mysql_data:
