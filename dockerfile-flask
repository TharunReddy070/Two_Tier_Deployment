# dockerfile-flask
FROM python:3.9-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

WORKDIR /app

# system deps (kept minimal)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    wget \
 && rm -rf /var/lib/apt/lists/*

# copy requirements and install
COPY source_code/requirements.txt ./requirements.txt
RUN python -m pip install --upgrade pip
RUN python -m pip install --no-cache-dir -r ./requirements.txt

# copy only app code into /app (so server.py ends up at /app/server.py)
COPY source_code/ /app/

EXPOSE 8181

# gunicorn must import 'server:app' (server.py must define app)
CMD ["gunicorn", "--bind", "0.0.0.0:8181", "server:app"]
