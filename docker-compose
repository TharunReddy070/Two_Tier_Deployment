version: "3.9"

services:
  nginx:
    build:
      context: .
      dockerfile: dockerfile-nginx
    ports:
      - "80:80"
    volumes:
      - ./source_code/static:/app/static:ro
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
    depends_on:
      - flask-app

  flask-app:
    build:
      context: .
      dockerfile: dockerfile-flask
    environment:
      DB_HOST: phonebook-mysql
      DB_USER: dev
      DB_PASSWORD: dev
      DB_NAME: crud_flask
    ports:
      - "8181:8181"
    depends_on:
      - phonebook-mysql

  phonebook-mysql:
    build:
      context: .
      dockerfile: dockerfile-mysql
    environment:
      MYSQL_ROOT_PASSWORD: root123
      MYSQL_DATABASE: crud_flask
      MYSQL_USER: dev
      MYSQL_PASSWORD: dev
    ports:
      - "3306:3306"
    volumes:
      - mysql_data:/var/lib/mysql

volumes:
  mysql_data:
